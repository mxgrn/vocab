<.header>
  Entry <%= @entry.id %>
  <:subtitle>This is a entry record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/entries/#{@entry}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit entry</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Source"><%= @entry.source %></:item>
  <:item title="Translation"><%= @entry.translation %></:item>
  <:item title="Pronunciation"><%= @entry.pronunciation %></:item>
</.list>

<.back navigate={~p"/entries"}>Back to entries</.back>

<.modal :if={@live_action == :edit} id="entry-modal" show on_cancel={JS.patch(~p"/entries/#{@entry}")}>
  <.live_component
    module={VocabWeb.EntryLive.FormComponent}
    id={@entry.id}
    title={@page_title}
    action={@live_action}
    entry={@entry}
    patch={~p"/entries/#{@entry}"}
  />
</.modal>
